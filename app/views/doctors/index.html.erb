<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Othernames</th>
      <th>Dob</th>
      <th>Specialization</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Gender</th>
      <th>Details</th>
      <th>Address</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.surname %></td>
        <td><%= doctor.othernames %></td>
        <td><%= doctor.dob %></td>
        <td><%= doctor.specialization %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.details %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.user %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

