<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Add Doctor</h3>
        <%= form_for(doctor) do |f| %>
          <% if doctor.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

              <ul>
              <% doctor.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row form-row">
            <div class="form-group col-md-6">
              <label for="surname">Surname</label>
              <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
            </div>

            <div class="form-row col-md-6">
            <label for="othernames">Other Names</label>
              <%= f.text_field :othernames, class: "form-control", placeholder: "Other Names" %>
            </div>

            <div class="form-row col-md-6">
            <label for="dob">Date of Birth</label>
              <%= f.date_select :dob, class: "form-control", placeholder: "Date of Birth" %>
            </div>

            <div class="form-row col-md-6">
            <label for="specialization">Specialization</label>
              <%= f.text_field :specialization, class: "form-control", placeholder: "Specialization" %>
            </div>

            <div class="form-row col-md-6">
            <label for="phone">Phone Number</label>
              <%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
            </div>

            <div class="form-row col-md-6">
            <label for="email">Email</label>
              <%= f.text_field :email, class: "form-control", placeholder: "email" %>
            </div>

            <div class="form-row col-md-6">
            <label for="gender">Gender</label>
              <%= f.text_field :gender, class: "form-control", placeholder: "Gender" %>
            </div>

            <div class="form-row col-md-6">
              <label for="details">Details</label>
              <%= f.text_area :details, class: "form-control", placeholder: "Details" %>
            </div>

            <div class="form-row col-md-6">
            <label for="address">Address</label>
              <%= f.text_area :address, class: "form-control", placeholder: "Address" %>
            </div>

            <div class="form-group col-md-12 mb-3">
              <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
