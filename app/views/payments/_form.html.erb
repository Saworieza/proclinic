<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Add Payment</h3>
        <%= form_for(payment) do |f| %>
          <% if payment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

              <ul>
              <% payment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row form-row">
            <div class="row form-row">
              <div class="form-group col-md-6">
                <label for="ward-head">Appointment</label>
                <%= f.collection_select :appointment_id, Appointment.all, :id, :token, {}, {class: "form-control"} %>
            </div>

            <div class="form-group col-md-6">
              <label for="ward-head">Amount</label>
              <%= f.number_field :amount, class: "form-control" %>
            </div>

            <div class="form-group col-md-6">
              <label for="ward-head">Payment Type</label>
              <%= f.text_field :paymentType, class: "form-control" %>
            </div>

          <div class="form-group col-md-12 mb-3">
            <%= f.submit class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
