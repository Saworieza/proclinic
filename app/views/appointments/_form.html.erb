<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Add Appointment</h3>
        <%= form_for(appointment) do |f| %>
          <% if appointment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

              <ul>
              <% appointment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row form-row">
            <div class="form-group col-md-6">
            <%= f.label :patient_id %>
            <%= f.collection_select :patient_id, Patient.all, :id, :othernames, {}, {class: "form-control"} %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :doctor_id %>
            <%= f.collection_select :doctor_id, Doctor.all, :id, :othernames, {}, {class: "form-control"} %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :department_id %>
            <%= f.collection_select :department_id, Department.all, :id, :name, {}, {class: "form-control"} %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :date %>
            <%= f.date_select :date %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :token %>
            <%= f.text_field :token, class: "form-control", placeholder: "Time Slot" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :timeSlot %>
            <%= f.text_field :timeSlot, class: "form-control", placeholder: "Time Slot" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :problem %>
            <%= f.text_area :problem, class: "form-control", placeholder: "Problem" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :diagnosed %>
            <%= f.check_box :diagnosed %>
          </div>

          <div class="form-group col-md-12 mb-3">
            <%= f.submit class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
