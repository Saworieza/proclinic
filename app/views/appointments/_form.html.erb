<%= form_for(appointment) do |f| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :patient_id %>
    <%= f.collection_select :patient, Patient.all, :id, :othernames %>
    <%#= f.text_field :patient_id %>
  </div>

  <div class="field">
    <%= f.label :doctor_id %>
    <%= f.text_field :doctor_id %>
  </div>

  <div class="field">
    <%= f.label :department_id %>
    <%= f.text_field :department_id %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :timeSlot %>
    <%= f.text_field :timeSlot %>
  </div>

  <div class="field">
    <%= f.label :token %>
    <%= f.number_field :token %>
  </div>

  <div class="field">
    <%= f.label :problem %>
    <%= f.text_area :problem %>
  </div>

  <div class="field">
    <%= f.label :diagnosed %>
    <%= f.check_box :diagnosed %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
