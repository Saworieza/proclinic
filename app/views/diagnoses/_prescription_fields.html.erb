<div class="nested-fields row">
  <div class="form-group col-md-3">
    <label for="patient-name">Drug</label>
    <%= f.text_field :drug, class: "form-control", placeholder: "Drug" %>
  </div>
  <div class="form-group col-md-3">
    <label for="patient-name">Quantity</label>
    <%= f.text_field :quantity, class: "form-control", placeholder: "Quantity" %>
  </div>
  <div class="form-group col-md-3">
    <label for="patient-name">Duration</label>
    <%= f.text_field :duration, class: "form-control", placeholder: "Duration" %>
  </div>

  <div class="form-group col-md-3">
    <label></label>
    <%= link_to_remove_association "Remove Prescription", f, class: "btn btn-danger btn-lg form-control" %>
  </div>
</div>
