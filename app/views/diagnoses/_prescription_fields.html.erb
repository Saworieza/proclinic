<div class="nested-fields row">
  <div class="form-group col-md-4">
    <label for="patient-name">Drug</label>
    <%= f.text_field :drug, class: "form-control", placeholder: "Surname" %>
  </div>
  <div class="form-group col-md-4">
    <label for="patient-name">Quantity</label>
    <%= f.text_field :quantity, class: "form-control", placeholder: "Other Names" %>
  </div>
  <div class="form-group col-md-4">
    <label for="patient-name">Duration</label>
    <%= f.text_field :duration, class: "form-control", placeholder: "Id Number" %>
  </div>

  <div class="form-group col-md-12 mb-3">
    <%= link_to_remove_association "Remove Prescription", f, class: "btn btn-primary btn-lg" %>
  </div>
</div>
