<%= render 'diagnoses/common' %>
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Diagnoses List</h3>
        <div class="table-responsive mb-3">
          <table id="tableId" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Appointment</th>
                <th>Disease</th>
                <th>Date</th>
                <th>Patient ID</th>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>
              <% @diagnoses.each do |diagnosis| %>
                <tr>
                  <td>CASE/<%= diagnosis.appointment.id %>/<%= Time.now.strftime("%Y") %></td>
                  <td><%= diagnosis.disease %></td>
                  <td><%= diagnosis.created_at.strftime('%B %d, %Y')%></td>
                  <td>PT / <%= diagnosis.appointment.patient.id %> / <%= Time.now.strftime("%Y") %></td>
                  <td><%= link_to 'Show', diagnosis %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
