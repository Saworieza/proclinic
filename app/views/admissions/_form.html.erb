<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Add Patient</h3>
        <%= form_for(admission) do |f| %>
          <% if admission.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(admission.errors.count, "error") %> prohibited this admission from being saved:</h2>

              <ul>
              <% admission.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row form-row">
            <div class="form-group col-md-6">
              <label for="patient-name">Appointment </label>
              <%= f.collection_select :appointment_id, Appointment.all, :id, :token, {}, {class: "form-control"} %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Room Number</label>
              <%= f.select :roomNumber, options_for_select(['1 Ward 2', '2 Ward 3', '3 Ward 4', '4 Ward 5']), {}, {class: "form-control"} %>
              <!-- A more efficient way would be to create a table for rooms and add a boolean field for available -->
              <!-- makes it easier to alot rooms based on availability or beds ... but this isnt a hotel -->
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Room Type</label>
              <%= f.select :roomType, options_for_select(['ICU', 'General', 'Maternity', 'AC Room']), {}, {class: "form-control"} %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Admission Date</label>
              <%= f.date_select :admissionDate %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Discharge Date</label>
              <%= f.date_select :dischargeDate %>
            </div>

            <div class="form-group col-md-6">
            <%= f.label :discharged %>
            <%= f.check_box :discharged %>
          </div>

            <div  class="form-group col-md-12 mb-3">
              <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
