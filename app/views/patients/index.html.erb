<%= render 'patients/common' %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Patients List</h3>
        <div class="table-responsive mb-3">
          <table id="tableId" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Patient Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Phone No</th>
              </tr>
            </thead>
            <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td><%= link_to patient.surname, patient %> <%= link_to patient.othernames, patient %></td>
                <td><%= patient.age %></td>
                <td><%= patient.gender %></td>
                <td><%= patient.phone %></td>
                <td><%= patient.address %></td>
                <td><%= patient.idNo %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
