<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="widget-area-2 proclinic-box-shadow">
        <h3 class="widget-title">Add Patient</h3>
        <%= form_for(patient) do |f| %>
          <% if patient.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

              <ul>
              <% patient.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row form-row">
            <div class="form-group col-md-6">
              <label for="patient-name">Surname</label>
              <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Other Names</label>
              <%= f.text_field :othernames, class: "form-control", placeholder: "Other Names", id: "patient-name" %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Age</label>
              <%= f.text_field :age, class: "form-control", placeholder: "Age" %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Gender</label>
              <%= f.select :gender, options_for_select(['Male', 'Female']), {}, {class: "form-control"} %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Phone</label>
              <%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">Address</label>
              <%= f.text_field :address, class: "form-control", placeholder: "address" %>
            </div>

            <div class="form-group col-md-6">
              <label for="patient-name">ID Number</label>
              <%= f.text_field :idNo, class: "form-control", placeholder: "Id Number" %>
            </div>

            <h5>Next Of Kin</h5>
            <div id="kins">
                <%= f.fields_for :kins do |kin| %>
                  <%= render 'kin_fields', f: kin %>
                <% end %>
                <span class='links'>
                  <%= link_to_add_association 'Add Next Of Kin', f, :kins %>
                </span>
            </div>

            <div class="form-group col-md-12 mb-3">
              <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
