<div class="nested-fields row">
  <div class="form-group col-md-6">
    <label for="patient-name">Surname</label>
    <%= f.text_field :surname, class: "form-control", placeholder: "Surname" %>
  </div>
  <div class="form-group col-md-6">
    <label for="patient-name">Other Names</label>
    <%= f.text_field :othernames, class: "form-control", placeholder: "Other Names" %>
  </div>
  <div class="form-group col-md-6">
    <label for="patient-name">Phone Number</label>
    <%= f.text_field :phone, class: "form-control", placeholder: "Id Number" %>
  </div>
  <div class="form-group col-md-6">
    <label for="patient-name">ID Number</label>
    <%= f.text_field :idNo, class: "form-control", placeholder: "Id Number" %>
  </div>

  <div class="form-group col-md-12 mb-3">
    <%= link_to_remove_association "remove kin", f, class: "btn btn-primary btn-lg" %>
  </div>
</div>
